{
  "name": "nekostorm",
  "version": "0.0.1",
  "description": "Anime-torrent search and torrenting application",
  "private": true,
  "author": {
    "name": "Haydon Lam",
    "email": "lamhaydon@gmail.com"
  },
  "main": "src/electron",
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "web-test-runner \"src/**/*.test.ts\"",
    "dev": "netlify dev",
    "electron:start": "electron-forge start",
    "electron:run": "npm run electron:start -- -- dev",
    "electron:serve": "npm run dev",
    "electron": "concurrently 'npm run electron:run' 'npm run electron:serve'"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "minimal_setup"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "electron-squirrel-startup": "^1.0.0",
    "nyaapi": "^2.3.3",
    "svelte": "^3.24.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.53",
    "@electron-forge/maker-deb": "6.0.0-beta.53",
    "@electron-forge/maker-rpm": "6.0.0-beta.53",
    "@electron-forge/maker-squirrel": "6.0.0-beta.53",
    "@electron-forge/maker-zip": "6.0.0-beta.53",
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-sass": "^1.3.0",
    "@snowpack/plugin-svelte": "^3.5.0",
    "@snowpack/plugin-typescript": "^1.2.0",
    "@snowpack/plugin-webpack": "^2.3.0",
    "@snowpack/web-test-runner-plugin": "^0.2.0",
    "@testing-library/svelte": "^3.0.0",
    "@types/chai": "^4.2.13",
    "@types/mocha": "^8.2.0",
    "@types/snowpack-env": "^2.3.2",
    "@types/webtorrent": "^0.109.0",
    "@web/test-runner": "^0.12.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "electron": "^11.2.3",
    "netlify-cli": "^3.4.7",
    "query-string": "^6.13.8",
    "rollup-plugin-svelte": "^7.0.0",
    "sass": "^1.32.5",
    "snowpack": "^3.0.1",
    "svelte-feather-icons": "^3.3.0",
    "svelte-loading-spinners": "^0.1.4",
    "svelte-masonry": "0.0.17",
    "svelte-preprocess": "^4.0.8",
    "svelte-select": "^3.16.1",
    "svelte-spa-router": "^3.1.0",
    "typescript": "^4.0.0"
  }
}
